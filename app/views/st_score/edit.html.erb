<style>
    .flex{
        display: flex;
    }

    .flex-col{
        flex-direction: column;
    }

    .flex-row{
        flex-direction: row;
    }

    .mt-5{
        margin-top: 1rem;
    }

    .justify-center{
        justify-content: center;
    }

    label{
        margin-left: 1rem;
        margin-right: 0.5rem;
    }
</style>
<%= form_with url: "update", method: :post , data: {turbo: false} do |form| %>
    <div class = "flex flex-col mt-5">
        <%= form.hidden_field :id, value: @id %>
        <div class = "flex justify-center mt-5">Edit Score</div>
        <%= form.label :query, "subject" %>
        <%= form.text_field :"subject" , value: @sub %>
        <%= form.label :query, "point" %>
        <%= form.text_field :"point" , value: @point %>
        <%= form.label :query, "grade" %>
        <%= form.text_field :"grade" , value: @grd %>
        <div class = "flex justify-center mt-5"><%= form.submit "save" %></div>
        <div class = "flex justify-center mt-5"><%= link_to "back", "/student/" + params[:stu_id] + "/edit_score" %></div>
<% end %>